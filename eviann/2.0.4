#%Module1.0#####################################################################
##
## eviann modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\teviann- Adds eviann.sh to your path"
}

module-whatis	"eviann-2.0.4"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate --stack ${hpcc_modules}/eviann/2.0.4;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

