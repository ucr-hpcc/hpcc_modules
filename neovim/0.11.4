##
## neovim modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tneovim - Adds neovim to your path"
}

module-whatis   "neovim-0.11.4"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH             ${hpcc_modules}/neovim/0.11.4/bin
prepend-path    LIBRARY_PATH     ${hpcc_modules}/neovim/0.11.4/lib64
prepend-path    LD_LIBRARY_PATH  ${hpcc_modules}/neovim/0.11.4/lib64

