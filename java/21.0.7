#%Module1.0#####################################################################
##
## Java modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds Java to your path"
}

module-whatis   "java-21.0.7"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path     PATH             ${hpcc_modules}/java/21.0.7/bin
prepend-path     LD_LIBRARY_PATH  ${hpcc_modules}/java/21.0.7/lib:${hpcc_modules}/java/21.0.7/lib/server/
prepend-path     C_INCLUDE_PATH   ${hpcc_modules}/java/21.0.7/include
prepend-path     MANPATH          ${hpcc_modules}/java/21.0.7/man
setenv           JAVA_HOME        ${hpcc_modules}/java/21.0.7

