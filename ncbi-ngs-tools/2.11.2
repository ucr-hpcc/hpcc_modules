#%Module1.0#####################################################################
##
## ncbi-ngs-tools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tncbi-ngs-tools - Adds ncbi-ngs-tools to your path"
}

module-whatis   "ncbi-ngs-tools-2.11.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share


prepend-path    PATH            ${hpcc_modules}/ncbi-ngs-tools/2.11.2/bin
prepend-path	LD_LIBRARY_PATH	${hpcc_modules}/ncbi-ngs-tools/2.11.2/lib64
