#%Module1.0#####################################################################
##
## bigscape modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbigscape- Adds bigscape to your path"
}

module-whatis	"bigscape-1.1.9"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3
module load db-pfam
if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} | perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/bigscape/1.1.9;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path    PATH            ${hpcc_modules}/bigscape/1.1.9/resource/corason/CORASON

