#%Module1.0#####################################################################
##
## methylmap modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmethylmap - Adds methylmap to your path"
}

module-whatis	"methylmap-0.3.4"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/methylmap/0.3.4/;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

