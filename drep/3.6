#%Module1.0#####################################################################
##
## drep modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tdrep - Adds drep to your path"
}

module-whatis	"drep-3.6.2"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/drep/3.6;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

