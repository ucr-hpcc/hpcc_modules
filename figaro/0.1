#%Module1.0#####################################################################
##
## figaro clbaster modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tfigaro - Adds figaro to your path"
}

module-whatis	"figaro-0.1"

set      hpcc_modules    $::env(HPCC_MODULES)

#  this will load python3
module load miniconda3 

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '(\$(dirname {default_env} | perl -p -e \"s#.+pkgs/##\")) '; source activate ${hpcc_modules}/figaro/0.1/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}
