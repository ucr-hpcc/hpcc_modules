#%Module1.0#####################################################################
##
## alphafold modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\talphafold- Adds alphafold to your path"
}

module-whatis	"alphafold-2.1.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load singularity

prepend-path    PATH              ${hpcc_modules}/alphafold/2.1.2/
setenv          ALPHAFOLD_SING    ${hpcc_modules}/alphafold/2.1.2/alphafold.sif
