#%Module1.0#####################################################################
##
## NextDenovo modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tNextDenovo - Adds nextDenovo to your path"
}

module-whatis	"NextDenovo-2.5.2"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/NextDenovo/2.5.2/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path    PATH            ${hpcc_modules}/NextDenovo/2.5.2:${hpcc_modules}/NextDenovo/2.5.2/bin
