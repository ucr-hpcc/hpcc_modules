#%Module1.0#####################################################################
##
## unicycler modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tunicycler - Adds unicycler to your path"
}

module-whatis	"unicycler-0.5.1"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/unicycler/0.5.1;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
