#%Module1.0#####################################################################
##
## meson modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmeson - Adds meson modules to your path"
}

module-whatis	"meson-1.7.2"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate --stack ${hpcc_modules}/meson/1.7.2;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

