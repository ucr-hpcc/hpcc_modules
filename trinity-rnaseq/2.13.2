#%Module1.0#####################################################################
##
## trinity-rnaseq modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttrinity-rnaseq - Adds trinity-rnaseq to your path"
}

module-whatis	"trinity-rnaseq-2.13.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load singularity

prepend-path    PATH            ${hpcc_modules}/trinity-rnaseq/2.13.2/
prepend-path    PATH            ${hpcc_modules}/trinity-rnaseq/2.13.2/util
setenv          TRINITY_HOME    ${hpcc_modules}/trinity-rnaseq/2.13.2/
setenv          TRINITY_SIMG    ${hpcc_modules}/trinity-rnaseq/2.13.2/images/trinityrnaseq.simg

module load fastqc
module load samtools
module load jellyfish
module load bowtie2
module load salmon
