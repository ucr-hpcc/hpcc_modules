#%Module1.0#####################################################################
##
## samtools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tsamtools- Adds samtools to your path"
}

module-whatis	"samtools-1.6"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load htslib/1.6
prepend-path    PATH              ${iigb_modules}/samtools/1.6/bin
#prepend-path    LD_LIBRARY_PATH   ${iigb_modules}/samtools/1.4.1/htslib/lib
prepend-path	MANPATH		  ${iigb_modules}/samtools/1.6/share/man
setenv	SAMTOOLS_PATH	${iigb_modules}/samtools/1.6/bin
module		use		${modules_dir}

