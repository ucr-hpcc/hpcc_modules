#%Module1.0#####################################################################
##
## hal modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\thal - Adds hal packages to your path"
}

module-whatis	"hal-2.2"

set      hpcc_modules    $::env(HPCC_MODULES)

module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/hal/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

# Set vars
prepend-path    PATH            ${hpcc_modules}/hal/2.2/bin
prepend-path    PYTHONPATH      ${hpcc_modules}/hal/2.2

