#%Module1.0#####################################################################
##
## csvkit modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcsvkit - Adds csvkit to your path"
}

module-whatis	"csvkit-1.0.7"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate --stack ${hpcc_modules}/csvkit/1.0.7;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
