#%Module1.0#####################################################################
##
## bonito modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbonito - Adds bonito to your path"
}

module-whatis	"bonito-0.6.2"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
       puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/bonito/0.6.2;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}
