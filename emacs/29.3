#%Module1.0#####################################################################
##
## Emacs modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds emacs to your path"
}

module-whatis   "emacs-29.3"

set      hpcc_modules    $::env(HPCC_MODULES)

# Setup PATHs
prepend-path    PATH            ${hpcc_modules}/emacs/29.3/bin
prepend-path    MANPATH         ${hpcc_modules}/emacs/29.3/share/man
prepend-path    CPATH           ${hpcc_modules}/emacs/29.3/include
prepend-path    LIBRARY_PATH    ${hpcc_modules}/emacs/29.3/lib
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/emacs/29.3/lib

