##
## orthofinder modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\torthofinder- Adds orthofinder to your path"
}

module-whatis	"orthofinder-2.5.4"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload miniconda2
module unload python
module unload perl
module load miniconda3
module load IQ-TREE
module load ncbi-blast/2.12.0+
module load mcl/14-137
module load fastme/2.1.5
module load RAxML_NG
module load RAxML
module load diamond/2.0.8
module load MMseqs2/13-45111
module load muscle
module load mafft
module load fasttree

prepend-path    PATH              ${hpcc_modules}/orthofinder/2.5.4


