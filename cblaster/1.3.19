#%Module1.0#####################################################################
##
## clinker clbaster modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tclinker - Adds clinker and cblaster to your path"
}

module-whatis	"clinker-cblaster-1.3.19"

set      hpcc_modules    $::env(HPCC_MODULES)

#  this will load python3
module load miniconda3 

# Set character encoding
setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; source activate ${hpcc_modules}/cblaster/1.3.19;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

# hmmer and diamond are installed within this env rather than using system module
