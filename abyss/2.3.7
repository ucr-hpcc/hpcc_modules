#%Module1.0#####################################################################
##
## abyss modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tabyss - Adds ABYSS to your path"
}

module-whatis	"abyss-2.3.7"

set      hpcc_modules    $::env(HPCC_MODULES)

setenv          ABYSS_DIR   ${hpcc_modules}/abyss/2.3.7/

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/abyss/2.3.7;" 
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

