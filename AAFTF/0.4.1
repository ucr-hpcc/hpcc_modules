#%Module1.0#####################################################################
##
## AAFTF modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tAAFTF - Adds AAFTF to your path"
}

module-whatis	"AAFTF-0.4.1"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3
module load samtools
if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/AAFTF/0.4.0;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
	puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

setenv	AAFTF_DB	/srv/projects/db/AAFTF_DB

