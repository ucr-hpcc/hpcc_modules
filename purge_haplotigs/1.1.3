#%Module1.0#####################################################################
##
## purge_haplotigs modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tpurge_haplotigs - Adds purge_haplotigs to your path"
}

module-whatis	"purge_haplotigs-1.1.3"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate --stack ${hpcc_modules}/purge_haplotigs/1.1.3;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
	puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

