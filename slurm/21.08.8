#%Module1.0#####################################################################
##
## SLURM modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds SLURM to your path"
}

module-whatis   "slurm-21.08.8"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH            ${hpcc_modules}/slurm/21.08.8/bin:${hpcc_modules}/slurm/21.08.8/sbin
prepend-path    MANPATH         ${hpcc_modules}/slurm/21.08.8/share/man
prepend-path    C_INCLUDE_PATH  ${hpcc_modules}/slurm/21.08.8/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/slurm/21.08.8/lib

# Slurm 20.11+ switched to steps being "--exclusive", srun waits for new resources.
# To allow srun to use current allocation set overlap.
setenv          SLURM_OVERLAP    1

