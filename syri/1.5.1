#%Module1.0#####################################################################
##
## syri modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tsyri - Adds syri (and plotsr) to your path"
}

module-whatis	"syri-1.5.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load plotsr

prepend-path	PATH	${hpcc_modules}/syri/1.5.1/syri/bin
