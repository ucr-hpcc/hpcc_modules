#%Module1.0#####################################################################
##
## phyling modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tphyling - Adds phyling to your path"
}

module-whatis	"phyling-2.1"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '(\$(dirname {default_env} | perl -p -e \"s#.+pkgs/##\")) '; source activate ${hpcc_modules}/phyling/2.1/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

prepend-path    PATH	${hpcc_modules}/phyling/2.1/aux-bin
