#%Module1.0#####################################################################
##
## beast modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbeast - Adds beast to your path"
}

module-whatis	"beast-2.7.1"

set      hpcc_modules    $::env(HPCC_MODULES)

module load java/17.0.2
module load beagle-lib/3.1.2

prepend-path    PATH        ${hpcc_modules}/beast/2.7.1/bin
prepend-path    CLASSPATH   ${hpcc_modules}/beast/2.7.1/lib
setenv          BEAST_LIB   ${hpcc_modules}/beast/2.7.1/lib

