#%Module1.0#####################################################################
##
## gunc modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgunc - Adds gunc suite of tools to your path"
}

module-whatis	"gunc-1.0.6"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/gunc/1.0.6;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
