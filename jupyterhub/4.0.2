#%Module1.0#####################################################################
##
## jupyterlab modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tjupyterhub - Adds jupyterhub to your path"
}

module-whatis	"jupyterhub-4.0.1"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

prepend-path PATH     ${hpcc_modules}/jupyterhub/4.0.2/bin

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/jupyterhub/4.0.2/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

