proc ModulesHelp { } {
        global version prefix

        puts stderr "\tjulia- Adds julia to your path"
}

module-whatis	"julia-1.8.4"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH             ${hpcc_modules}/julia/1.8.4/bin
prepend-path    LD_LIBRARY_PATH  ${hpcc_modules}/julia/1.8.4/lib
prepend-path    MANPATH          ${hpcc_modules}/julia/1.8.4/share/man
prepend-path    C_INCLUDE        ${hpcc_modules}/julia/1.8.4/include
prepend-path    INCLUDE_PATH     ${hpcc_modules}/julia/1.8.4/include
