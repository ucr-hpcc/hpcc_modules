#%Module1.0#####################################################################
##
## ltr_retriever modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tltr_retriever - Adds ltr_retriever to your path"
}

module-whatis	"ltr_retriever-2.9.1"

set      hpcc_modules    $::env(HPCC_MODULES)

module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(dirname {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/ltr_retriever/2.9.1/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '({default_env}) '; conda deactivate;"
}

prepend-path    PATH            ${hpcc_modules}/ltr_retriever/2.9.1/

