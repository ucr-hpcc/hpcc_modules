#%Module1.0#####################################################################
##
## slurm-drmaa library modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds slurm-drmaa to your path"
}

module-whatis   "slurm-drmaa-1.1.5"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH            ${hpcc_modules}/slurm-drmaa/1.1.5/bin
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/slurm-drmaa/1.1.5/lib

setenv	DRMAA_LIBRARY_PATH ${hpcc_modules}/slurm-drmaa/1.1.5/lib/libdrmaa.so
