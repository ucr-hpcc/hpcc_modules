#%Module1.0#####################################################################
##
## R modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds R 3 to your path"
}

module-whatis   "R-4.0.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         4.0.3
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${hpcc_modules}/R/4.0.3/bin
prepend-path    MANPATH         ${hpcc_modules}/R/4.0.3/share/man
prepend-path    CPATH           ${hpcc_modules}/R/4.0.3/lib64/R/include
prepend-path    LIBRARY_PATH    ${hpcc_modules}/R/4.0.3/lib64/R/lib
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/R/4.0.3/lib64/R/lib

# Package vcfR uses system perl
module unload perl

# Deps for various R packages
module          load            ggobi/2.1.11 pandoc/2.9.2.1 netcdf/4.4.1.1 java/8 geos/3.7.1 gdal/2.1.3 hdf5/1.10.1 libiconv/1.16 java/8u45

