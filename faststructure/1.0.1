#%Module1.0#####################################################################
##
## faststructure modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tfaststructure - Adds structure.py, chooseK.py, and distruct.py to your path"
}

module-whatis	"faststructure-1.0.1"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/faststructure/1.0.1/;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

