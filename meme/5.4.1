#%Module1.0#####################################################################
##
## meme modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmeme - Adds meme to your path"
}

module-whatis	"meme-5.4.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load miniconda2/4.4.10

prepend-path    PATH            ${hpcc_modules}/meme/5.4.1/bin:${hpcc_modules}/meme/5.4.1/libexec/meme-5.4.1
prepend-path    PERL5LIB        ${hpcc_modules}/meme/5.4.1/lib/meme-5.4.1/perl
prepend-path    PYTHONPATH      ${hpcc_modules}/meme/5.4.1/lib/meme-5.4.1/python

