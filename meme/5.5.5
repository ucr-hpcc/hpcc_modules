#%Module1.0#####################################################################
##
## meme modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmeme - Adds meme to your path"
}

module-whatis	"meme-5.5.5"

set      hpcc_modules    $::env(HPCC_MODULES)

module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/meme/5.5.5/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path    PATH            ${hpcc_modules}/meme/5.5.5/bin:${hpcc_modules}/meme/5.5.5/libexec/meme-5.5.5
prepend-path    PERL5LIB        ${hpcc_modules}/meme/5.5.5/lib/meme-5.5.5/perl
prepend-path    PYTHONPATH      ${hpcc_modules}/meme/5.5.5/lib/meme-5.5.5/python

