#%Module1.0#####################################################################
##
## Quantum ESPRESSO modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tespresso - Adds Quantum ESPRESSO to your path"
}

module-whatis	"espresso-7.3.1_cuda-11.8"

set      hpcc_modules    $::env(HPCC_MODULES)

conflict openmpi cuda

module load hdf5/1.12.2 nvhpc/24.3

prepend-path    PATH    ${hpcc_modules}/espresso/7.3.1_cuda-11.8/bin

