#%Module1.0#####################################################################
##
## spieceasi modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tr-spieceasi - Adds insall R modules for spieceasi to your path"
}

module-whatis	"r-spieceasi-1.1.1"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/r-spieceasi/1.1.1/;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

