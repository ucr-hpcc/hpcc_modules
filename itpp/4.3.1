##
## itpp modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\titpp - Adds IT++ to your path"
}

module-whatis	"itpp-4.3.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

prepend-path    PATH                ${hpcc_modules}/itpp/4.3.1/bin
prepend-path    CPLUS_INCLUDE_PATH  ${hpcc_modules}/itpp/4.3.1/include
prepend-path    LD_LIBRARY_PATH     ${hpcc_modules}/itpp/4.3.1/lib
prepend-path    LIBRARY_PATH        ${hpcc_modules}/itpp/4.3.1/lib
prepend-path    MANPATH             ${hpcc_modules}/itpp/4.3.1/share/man

