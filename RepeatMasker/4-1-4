#%Module1.0#####################################################################
##
## RepeatMasker modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tRepeatMasker - Adds RepeatMasker to your path"
}

module-whatis	"RepeatMasker-4-1-4"

set      hpcc_modules    $::env(HPCC_MODULES)

module load ncbi-rmblast/2.11.0
module load trf
module load hmmer/3
module load kent-tools

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/RepeatMasker/4-1-2/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path    PATH  	${hpcc_modules}/RepeatMasker/4-1-4
prepend-path    PATH    ${hpcc_modules}/RepeatMasker/4-1-4/util

