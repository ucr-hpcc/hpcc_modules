#%Module1.0#####################################################################
##
## phanotate modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tphanotate - Adds phanotate to your path"
}

module-whatis	"phanotate-1.6.7"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate --stack ${hpcc_modules}/phanotate/1.6.7/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

