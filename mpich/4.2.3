#%Module1.0#####################################################################
##
## mpich modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmpich - Add mpich to your path"
}

module-whatis   "mpich-4.2.3"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH             ${hpcc_modules}/mpich/4.2.3/bin
prepend-path    CPATH            ${hpcc_modules}/mpich/4.2.3/include
prepend-path    LIBRARY_PATH     ${hpcc_modules}/mpich/4.2.3/lib
prepend-path    LD_LIBRARY_PATH  ${hpcc_modules}/mpich/4.2.3/lib
prepend-path    MANPATH          ${hpcc_modules}/mpich/4.2.3/share/man

