#%Module1.0#####################################################################
##
## blobtools modulefile
##
## SEE https://github.com/DRL/blobtools
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tblobtools - Adds blobtools to your path"
}

module-whatis	"blobtools-2.6.4"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload python miniconda2 anaconda2 anaconda3
module load miniconda3
module load samtools/1.14
module load htslib/1.14
module load ncbi-blast/2.9.0+
module load diamond
module load seqtk

#source-sh bash ${hpcc_modules}/hpcc_user_utils/bin/conda_activate_wrapper miniconda3/4.3.31 blobtools-2.5.0

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload python miniconda2 anaconda2 anaconda3; module load miniconda3/4.3.31; conda activate blobtools-2;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path    PATH            ${hpcc_modules}/blobtools/2.6.4/blobtools2
prepend-path    PATH            ${hpcc_modules}/blobtools/2.6.4/specification
prepend-path    PATH            ${hpcc_modules}/blobtools/2.6.4/insdc-pipeline/scripts

setenv BLOBDB /srv/projects/db/blobPlotDB/current
setenv BLOBREFDB /srv/projects/db/blobPlotDB/current/reference_proteomes.dmnd
setenv BLOBTAX  /srv/projects/db/blobPlotDB/taxonomy
setenv BLOBRNA /srv/projects/db/blobPlotDB/RNAcentral
