##
## gperftools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds fuse tools to your path"
}

module-whatis   "fuse-3.17.3"

set      hpcc_modules    $::env(HPCC_MODULES)

# Setup PATHs
prepend-path    LD_LIBRARY_PATH    ${hpcc_modules}/fuse/3.17.3/lib
prepend-path    LIBRARY_PATH       ${hpcc_modules}/fuse/3.17.3/lib
prepend-path    PATH		   ${hpcc_modules}/fuse/3.17.3/bin
prepend-path    MANPATH		   ${hpcc_modules}/fuse/3.17.3/share/man
prepend-path	PKG_CONFIG_PATH	   ${hpcc_modules}/fuse/3.17.3/lib64/pkgconfig

