#%Module1.0#####################################################################
##
## ppanggolin modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tppanggolin - Adds ppanggolin to your path"
}

module-whatis	"ppanggolin-2.2.3"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate --stack ${hpcc_modules}/ppanggolin/2.2.3/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

