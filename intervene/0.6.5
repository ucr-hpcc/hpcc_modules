#%Module1.0#####################################################################
##
## intervene modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tintervene - Adds intervene conda env to your path"
}

module-whatis	"intervene-0.6.5"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo -n {default_env} | perl -p -e \"s#.+pkgs/##; s#/env##\")) '; conda activate ${hpcc_modules}/intervene/0.6.5;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
