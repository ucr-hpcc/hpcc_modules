#%Module1.0#####################################################################
##
## OpenSceneGraph modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds OpenSceneGraph to your path"
}

module-whatis   "OpenSceneGraph-3.6.5"

set      hpcc_modules    $::env(HPCC_MODULES)

# Setup PATHs
prepend-path    PATH            ${hpcc_modules}/openscenegraph/3.6.5/bin
prepend-path    CPATH           ${hpcc_modules}/openscenegraph/3.6.5/include
prepend-path    LIBRARY_PATH    ${hpcc_modules}/openscenegraph/3.6.5/lib
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/openscenegraph/3.6.5/lib
prepend-path    CMAKE_PREFIX_PATH ${hpcc_modules}/openscenegraph/3.6.5

