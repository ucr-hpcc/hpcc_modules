#%Module1.0#####################################################################
##
## anchorwave modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tanchorwave- Adds anchorwave to your path"
}

module-whatis	"anchorwave-1.2.6"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate ${hpcc_modules}/anchorwave/1.2.6/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

