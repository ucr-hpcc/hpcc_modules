#%Module1.0#####################################################################
##
## gurobi modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgurobi - Adds Gurobi Optimizer to your path"
}

module-whatis   "gurobi-11.0.3"

set      hpcc_modules    $::env(HPCC_MODULES)

module-forbid --not-group gurobi --message "Please contact HPCC support to gain access to Gurobi." gurobi

setenv          GUROBI_HOME             ${hpcc_modules}/gurobi/11.0.3
prepend-path    PATH                    ${hpcc_modules}/gurobi/11.0.3/bin
prepend-path    LD_LIBRARY_PATH         ${hpcc_modules}/gurobi/11.0.3/lib
setenv          GRB_LICENSE_FILE        ${hpcc_modules}/gurobi/gurobi.lic
