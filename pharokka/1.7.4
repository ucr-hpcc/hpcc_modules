#%Module1.0#####################################################################
##
## pharokka modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tpharokka - Adds qiime2 to your path"
}

module-whatis	"pharokka-1.7.4"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate --stack ${hpcc_modules}/pharokka/1.7.4/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

