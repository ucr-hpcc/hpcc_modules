#%Module1.0#####################################################################
##
## DFTB+ modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds dftbplus to your path"
}

module-whatis   "dftbplus-22.2"

set      hpcc_modules    $::env(HPCC_MODULES)

# Setup PATHs
prepend-path    PATH            ${hpcc_modules}/dftbplus/22.2/bin
prepend-path    LIBRARY_PATH    ${hpcc_modules}/dftbplus/22.2/lib64
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/dftbplus/22.2/lib64
prepend-path    C_INCLUDE_PATH  ${hpcc_modules}/dftbplus/22.2/include

