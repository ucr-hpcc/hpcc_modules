#%Module1.0#####################################################################
##
## DFTB+ modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds dftbplus to your path"
}

module-whatis   "dftbplus-22.2"

set      hpcc_modules    $::env(HPCC_MODULES)

# Deps for various R packages
# No module for gdal and geos, these are now installed as RPMs
module load oneapi openmpi

# Setup PATHs
prepend-path    PATH            ${hpcc_modules}/R/4.2.2/bin
prepend-path    MANPATH         ${hpcc_modules}/R/4.2.2/share/man
prepend-path    CPATH           ${hpcc_modules}/R/4.2.2/lib64/R/include
prepend-path    LIBRARY_PATH    ${hpcc_modules}/R/4.2.2/lib64/R/lib
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/R/4.2.2/lib64/R/lib

