#%Module1.0#####################################################################
##
## busco modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbusco- Adds busco to your path"
}

module-whatis	"busco-5.4.4"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/busco/5.4.4;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

setenv           BUSCO_LINEAGES      /srv/projects/db/BUSCO/v10
#prepend-path     PATH                ${hpcc_modules}/busco/5.4.4/bin
