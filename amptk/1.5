#%Module1.0#####################################################################
##
## amptk modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tamptk - Adds amptk to your path"
}

module-whatis	"amptk-1.5"

set      hpcc_modules    $::env(HPCC_MODULES)

module  load    usearch
module load mafft
module load fasttree
if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/amptk/1.5;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
