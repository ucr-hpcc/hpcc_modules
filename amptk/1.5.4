#%Module1.0#####################################################################
##
## amptk modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tamptk - Adds amptk (formerly ufits) ITS pipeline to your path"
}

module-whatis	"amptk-1.5.4"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload miniconda2
module load miniconda3
module load ITSx
module load hmmer
#module load fasttree
#module load mafft/7.471
module load fastx_toolkit
#module load vsearch
module load samtools/1.12
module load bedtools

setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload miniconda2; module load miniconda3; source activate amptk-1.5.4;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
# Add path manually, since source activate does not function within parent shell
prepend-path    PATH    ${hpcc_modules}/miniconda3/4.3.3/envs/amptk-1.5.4/bin
prepend-path    PATH    ${hpcc_modules}/amptk/1.5.4/scripts

