#%Module1.0#####################################################################
##
## ntsynt modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tntsynt - Adds ntSynt tool (via conda) to your path"
}

module-whatis	"ntsynt-1.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)

module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate --stack ${hpcc_modules}/ntsynt/1.0.2/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module load miniconda3; conda deactivate;"
}

