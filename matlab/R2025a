#%Module1.0#####################################################################
##
## MATLAB modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tMATLAB- Adds MATLAB to your path"
}

module-whatis	"MATLAB-R2025a"

set msg {You must be a part of the 'matlab' group to use this software.
If you are a UCR-affiliated user, please contact support about getting access.}

module-forbid --not-group matlab --message $msg matlab/R2025a

set      hpcc_modules    $::env(HPCC_MODULES)

if { [info exists ::env(SLURM_JOB_PARTITION)] } {
  set partition $::env(SLURM_JOB_PARTITION)
} else {
  set partition ""
}

if { [module-info mode load] && $partition == "batch" } {
  puts stderr "Modern MATLAB has known incompatibilities on nodes in the batch partition."
  puts stderr "Please use version R2021a on batch partition nodes, or consider using a different partition for modern versions of MATLAB"
}

prepend-path    PATH              ${hpcc_modules}/matlab/R2025a/bin
prepend-path    PATH              ${hpcc_modules}/matlab/R2025a/bin/glnxa64
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/matlab/R2025a/bin/glnxa64
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/matlab/R2025a/extern/bin/glnxa64
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/matlab/R2025a/sys/os/glnxa64
setenv          LM_LICENSE_FILE   "27000@matlab"
setenv          MLM_LICENSE_FILE  "27000@matlab"

