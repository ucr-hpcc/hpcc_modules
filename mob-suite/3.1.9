#%Module1.0#####################################################################
##
## mob-suite modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmob-suite - Adds mob-suite to your path"
}

module-whatis	"mob-suite-3.1.9"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate --stack ${hpcc_modules}/mob-suite/3.1.9/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

