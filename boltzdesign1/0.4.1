#%Module1.0#####################################################################
##
## BoltzDesign1 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tBoltzDesign1 - adds BoltzDesign1 to your path"
}

module-whatis	"boltzdesign1-0.4.1"

set      hpcc_modules    $::env(HPCC_MODULES)

module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda config --set env_prompt '(\$(echo {default_env} |  perl -p -e \"s#.+pkgs/##\")) '; conda activate --stack ${hpcc_modules}/boltzdesign1/0.4.1/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path  PATH  ${hpcc_modules}/boltzdesign1/0.4.1:${hpcc_modules}/boltzdesign1/0.4.1/boltzdesign
